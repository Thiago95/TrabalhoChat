<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.theagobueno.wolfchat.Actvt.LoginActvt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faça o Login "
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#0000CD"
        />


    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuário"
        android:inputType="text"
        android:textColorHint="#0000CD"
        android:backgroundTint="#0000CD"/>


    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="#0000CD"
        android:backgroundTint="#0000CD"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ENTRAR"
        android:backgroundTint="#0000CD"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/txtVCriarConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Não possue conta? Clique aqui!"
        android:textColor="#0000CD"
        android:textSize="15dp"/>

</LinearLayout>
